<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_test_gif_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000"
    android:orientation="vertical"
    tools:context="com.example.dgif.Preview3DObject" >


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="100px"
        android:orientation="horizontal"
        android:background="#F4F9FF">

        <Button
        android:id="@+id/prev_to_gallery_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@android:color/transparent"
        android:text="@string/fontawesome_menu_glyph_unicode"
        android:textSize="20dp"
        android:textColor="#852929"
        android:layout_alignParentLeft="true"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="View"
            android:fontFamily="sans-serif-light"
            android:textSize="20dp"
            />

        <Button
            android:id="@+id/prev_to_cam_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@android:color/transparent"
            android:text="@string/fontawesome_camera_glyph_unicode"
            android:textSize="20dp"
            android:textColor="#852929"
            android:layout_alignParentRight="true"
            />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.example.dgif.customviews.GyroImageView
            android:id="@+id/testGifView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="centerCrop"
            />

        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            android:visibility="invisible"
            android:layout_centerInParent="true"/>


        </RelativeLayout>


    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="200px"
        android:orientation="horizontal"
        android:background="#F4F9FF">
     </RelativeLayout>





    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start gyroscope"
        android:id="@+id/btn_start_gyro"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/progressBar"
        android:layout_toStartOf="@+id/progressBar" />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/btn_start_gyro"
        android:layout_alignLeft="@+id/testGifView"
        android:orientation="vertical"
        android:id="@+id/linearLayout">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <SeekBar
                android:id="@+id/speedBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.70"
                android:max="100"
                android:progress="50" />

            <TextView
                android:id="@+id/speedView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="#FFFFFFFF"
                android:padding="7dp"
                android:text="50" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <SeekBar
                android:id="@+id/blendBar"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.52"
                android:max="5"
                android:progress="@integer/initial_num_intermediates" />

            <TextView
                android:id="@+id/blendView"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_weight="0.03"
                android:background="#FFFFFFFF"
                android:padding="7dp"
                android:text="@integer/initial_num_intermediates" />

        </LinearLayout>
    </LinearLayout>




</LinearLayout>